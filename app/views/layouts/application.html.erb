<!DOCTYPE html>
<html>
  <head>
    <title>Stripetest</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
  </head>

  <body>
    <nav class="nav">
        <% if user_signed_in? %>
          <% if current_user.subscribed == false %>
          <%= link_to 'Subscribe', subscribe_index_path %>
          <% else %>
          <%= link_to 'New Note', new_note_path %>
          <%= link_to 'My Notes', notes_path %>
          <%= link_to "Cancel my Subscription", cancel_plan_path, :data => { :confirm => "Are you sure?" }, :method => :delete %>
          <% end %>
        <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
        <% else %>
        <%= link_to 'Sign Up', signup_path %>
        <%= link_to 'Login', signin_path %>
        <% end %>
      </nav>
    <%= yield %>
  </body>
</html>
